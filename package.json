{
  "name": "dts-element",
  "version": "2.0.5",
  "description": "A DOM library for generation TypeScript declaration (.d.ts) files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/dts-element",
  "homepage": "https://ikatyang.github.io/dts-element/",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run build",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json",
    "lint": "tslint --type-check --project ./tsconfig.json",
    "test": "jest --config ./jest.json",
    "pretypedoc": "rm -rf ./docs",
    "typedoc": "typedoc --name \"dts-element v$npm_package_version\" --out ./docs --mode file --exclude '{**/{__tests__,tests,parsers}/**/*,**/utils.ts}' --excludeExternals --excludePrivate --gitRevision \"v$npm_package_version\"",
    "postpublish": "yarn run typedoc"
  },
  "dependencies": {
    "typescript": "^2.4.1"
  },
  "devDependencies": {
    "@types/dedent": "0.7.0",
    "@types/jest": "20.0.4",
    "dedent": "0.7.0",
    "jest": "20.0.4",
    "ts-jest": "20.0.6",
    "tslint": "5.5.0",
    "tslint-config-ikatyang": "0.10.0",
    "typedoc": "0.7.1"
  },
  "files": [
    "lib/**"
  ]
}
