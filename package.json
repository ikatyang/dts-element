{
  "name": "dts-element",
  "version": "2.0.5",
  "description": "A DOM library for generation TypeScript declaration (.d.ts) files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/dts-element",
  "homepage": "https://ikatyang.github.io/dts-element/",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run build",
    "build": "rm -rf ./lib && tsc -p ./tsconfig.build.json",
    "lint": "tslint --type-check -p ./tsconfig.json",
    "test": "jest --config ./jest.json",
    "typedoc": "rm -rf ./docs && typedoc --name \"dts-element v$npm_package_version\" --out ./docs --mode file --exclude '{**/{__tests__,tests,parsers}/**/*,**/utils.ts}' --excludeExternals --excludePrivate --gitRevision \"v$npm_package_version\"",
    "postpublish": "yarn run typedoc"
  },
  "dependencies": {
    "typescript": "^2.4.1"
  },
  "devDependencies": {
    "@types/dedent": "0.7.0",
    "@types/jest": "20.0.5",
    "dedent": "0.7.0",
    "jest": "20.0.4",
    "prettier": "1.5.3",
    "prettier-config-ikatyang": "1.1.1",
    "ts-jest": "20.0.7",
    "tslint": "5.5.0",
    "tslint-config-ikatyang": "2.1.0",
    "tslint-config-prettier-ext": "1.3.0",
    "tslint-plugin-prettier": "1.0.0",
    "typedoc": "0.8.0"
  },
  "engines": {
    "node": ">= 4"
  },
  "files": [
    "/lib/**/*"
  ]
}
