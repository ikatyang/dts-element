{
  "name": "dts-element",
  "version": "2.0.2",
  "description": "A DOM library for generation TypeScript declaration (.d.ts) files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/dts-element",
  "homepage": "https://ikatyang.github.io/dts-element/",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prepublish": "yarn run link && yarn run build",
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json",
    "lint": "tslint --type-check --project ./tsconfig.json",
    "link": "ln -sf $PWD/types/* $PWD/node_modules/@types",
    "test": "jest --config ./jest.json",
    "test-ci": "yarn run test -- --verbose",
    "pretest-coverage": "rm -rf ./coverage",
    "test-coverage": "yarn run test -- --coverage",
    "test-coverage-ci": "yarn run test-coverage -- --verbose",
    "coverage-ci": "codecov",
    "pretypedoc": "rm -rf ./node_modules/typedoc/node_modules/typescript && rm -rf ./docs",
    "typedoc": "typedoc --name \"dts-element v$npm_package_version\" --out ./docs --mode file --exclude '{**/{__tests__,tests,parsers}/**/*,**/utils.ts}' --excludeExternals --excludePrivate --gitRevision \"v$npm_package_version\"",
    "postpublish": "yarn run typedoc"
  },
  "dependencies": {
    "typescript": "^2.4.0-dev.20170524"
  },
  "devDependencies": {
    "@types/jest": "19.2.3",
    "codecov": "2.2.0",
    "dedent": "0.7.0",
    "jest": "20.0.1",
    "ts-jest": "20.0.3",
    "tslint": "5.2.0",
    "tslint-config-ikatyang": "0.4.0",
    "typedoc": "0.7.0"
  },
  "files": [
    "lib/**"
  ]
}
